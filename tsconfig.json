{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES6",
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"outDir": "./dist",
		"strict": true,
		"baseUrl": "./src",
		"lib": ["ES2021"],
		"typeRoots": ["node_modules/@types", "types"]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}